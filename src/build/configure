# Regular Colors
B='\033[0;30m'       # Black
R='\033[0;31m'       # Red
G='\033[0;32m'       # Green
Y='\033[0;33m'       # Yellow
BL='\033[0;34m'      # Blue
P='\033[0;35m'       # Purple
C='\033[0;36m'       # Cyan
W='\033[0;37m'       # White

BUILD_TOP_DIR=$(pwd)

CONFIGS_DIR=${BUILD_TOP_DIR}/configs
CONFIGS_FILE=.config

UBUNTU_PLATFORM_CONFIG=U-CO1XG_defconfig
NVIDIA_ORIN_RxAnt1_MODEM_PLATFORM_CONFIG=NO-CO1XG_defconfig
NVIDIA_ORIN_RxAnt2_MODEM_PLATFORM_CONFIG=NO-CO2XG_defconfig
NVIDIA_NANO_RxAnt1_MODEM_PLATFORM_CONFIG=NN-CO1XG_defconfig
NVIDIA_NANO_RxAnt2_MODEM_PLATFORM_CONFIG=NN-CO2XG_defconfig
XILINX_PLATFORM_CONFIG=XZ-CO1XGC_defconfig

echo 
echo -e "$W"
echo "========================================================================="
echo "[Platform Configurations Options]"
echo "    ./configure U-CO1XG   : UBUNTU"
echo "                NO-CO1XG  : NVIDIA ORIN RxAnt.1 MODEM"
echo "                NO-CO2XG  : NVIDIA ORIN RxAnt.2 MODEM"
echo "                NN-CO1XG  : NVIDIA NANO RxAnt.1 MODEM"
echo "                NN-CO2XG  : NVIDIA NANO RxAnt.2 MODEM"
echo "                XZ-CO1XGC : XILINX"
echo "========================================================================="
echo
echo -e "$BL"
echo "========================================================================="
echo "Start Configuration"
echo -e "$W"

if [ "U-CO1XG" = "$1" ]; then
    echo -e "$BL"
	echo "UBUNTU"
    echo "========================================================================="
    echo -e "$W"
    cp ${CONFIGS_DIR}/${UBUNTU_PLATFORM_CONFIG} ${BUILD_TOP_DIR}/${CONFIGS_FILE}
elif [ "NO-CO1XG" = "$1" ]; then
    echo -e "$BL"
	echo "NVIDIA ORIN RxAnt.1 MODEM"
    echo "========================================================================="
    echo -e "$W"
    cp ${CONFIGS_DIR}/${NVIDIA_ORIN_RxAnt1_MODEM_PLATFORM_CONFIG} ${BUILD_TOP_DIR}/${CONFIGS_FILE}
elif [ "NO-CO2XG" = "$1" ]; then
    echo -e "$BL"
	echo "NVIDIA ORIN RxAnt.2 MODEM"
    echo "========================================================================="
    echo -e "$W"
    cp ${CONFIGS_DIR}/${NVIDIA_ORIN_RxAnt2_MODEM_PLATFORM_CONFIG} ${BUILD_TOP_DIR}/${CONFIGS_FILE}
elif [ "NN-CO1XG" = "$1" ]; then
    echo -e "$BL"
	echo "NVIDIA NANO RxAnt.1 MODEM"
    echo "========================================================================="
    echo -e "$W"
    cp ${CONFIGS_DIR}/${NVIDIA_NANO_RxAnt1_MODEM_PLATFORM_CONFIG} ${BUILD_TOP_DIR}/${CONFIGS_FILE}
elif [ "NN-CO2XG" = "$1" ]; then
    echo -e "$BL"
	echo "NVIDIA NANO RxAnt.2 MODEM"
    echo "========================================================================="
    echo -e "$W"
    cp ${CONFIGS_DIR}/${NVIDIA_NANO_RxAnt2_MODEM_PLATFORM_CONFIG} ${BUILD_TOP_DIR}/${CONFIGS_FILE}
elif [ "XZ-CO1XGC" = "$1" ]; then
    echo -e "$BL"
    echo "XILINX"
    echo "========================================================================="
    echo -e "$W"
    cp ${CONFIGS_DIR}/${XILINX_PLATFORM_CONFIG} ${BUILD_TOP_DIR}/${CONFIGS_FILE}    
else
    echo -e "$Y"
	echo "CHECK THE PLATFORM"
    echo -e "$BL========================================================================="
    echo -e "$W"
fi
